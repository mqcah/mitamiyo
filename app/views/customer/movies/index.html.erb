<% @movies.each do |movie| %>
<!-- 映画画像 -->
<%= attachment_image_tag movie, :movie_image, :fill, 280, 210, format: 'jpeg' %>

<!-- 映画タイトル -->
<%= link_to movie.title, movie_path(movie.id) %>

<!-- ジャンル -->
<% @movie.genres.each do |genre| %>
  <%= genre.name %>
<% end %>
<!-- レビュー -->
<div id="star-rate-<%= @movie.id %>"></div>
 <script>
  $('#star-rate-<%= @movie.id %>').raty({
    size: 36,
    starOff:  '<%= asset_path('star-off.png') %>',
    starOn : '<%= asset_path('star-on.png') %>',
    starHalf: '<%= asset_path('star-half.png') %>',
    half: true,
    readOnly: true,
    score: <%= @movie.rate %>,
  });
</script>
<!-- netflix-->
<% if movie.netflix == true %>
    Netflix：なし
<% else %>
    Netflix：あり
<% end %>

<!-- amazon-prime -->
<% if movie.amazon == true %>
    AmazonPrime：なし
<% else %>
     AmazonPrime：あり
<% end %>

<!-- hulu -->
<% if movie.hulu == true %>
	Hulu：なし
<% else %>
	Hulu：あり
<% end %>

<% end %>
