<div class="container">
	<% @movies.each do |movie| %>
	<div class="row">
		<!-- 映画画像 -->
		<% if movie.movie_image.present? %>
			<%= attachment_image_tag movie, :movie_image, :fill, 150, 150, format: 'jpeg' %>
		<% else %>
		    <%= image_tag 'no-movie.png', size: '200x200' %>
		<% end %>
		<!-- 映画タイトル -->
		<%= link_to movie.title, movie_path(movie.id) %>

		<!-- ジャンル -->
		<% @genres.each do |genre| %>
			<%= genre.name + '' %>
		<% end %>
		<!-- レビュー -->
		<div id="star-rate-<%= movie.id %>"></div>
		 <script>
		  $('#star-rate-<%= movie.id %>').raty({
		    size: 36,
		    starOff:  '<%= asset_path('star-off.png') %>',
		    starOn : '<%= asset_path('star-on.png') %>',
		    starHalf: '<%= asset_path('star-half.png') %>',
		    half: true,
		    readOnly: true,
		    score: <%= movie.rate %>,
		  });
		</script>
	</div>
		<!-- ブックマーク -->

		<!-- netflix-->
		<% if movie.netflix == true %>
		    Netflix：なし
		<% else %>
		    Netflix：あり
		<% end %>

		<!-- amazon-prime -->
		<% if movie.amazon == true %>
		    AmazonPrime：なし
		<% else %>
		     AmazonPrime：あり
		<% end %>

		<!-- hulu -->
		<% if movie.hulu == true %>
			Hulu：なし
		<% else %>
			Hulu：あり
		<% end %>

	<% end %>
</div>