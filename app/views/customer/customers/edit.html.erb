<div class="container">
<h2>プロフィール編集</h2>

<%= form_for(@customer, url: customer_path) do |f| %>


<!-- アイコン -->
<p>ファイル選択 <%= f.attachment_field :image %></p>

<!-- ユーザーID -->
<%= '@' + @customer.user_id %>

<!-- ユーザーナーム -->
ユーザーネーム<%= f.text_field :customer_name %>

<!-- プロフィール -->
プロフィール<%= f.text_field :profile %>

<%= f.submit "変更を保存する", class:"btn btn-success", style: "width: 12em" %>
<% end %>
<!-- 退会ボタン -->
<%= link_to "退会する" ,leave_path, class: "btn btn-danger" %>
</div>